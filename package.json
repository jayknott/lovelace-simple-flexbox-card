{
  "name": "lovelace-simple-flexbox-card",
  "version": "0.1.0",
  "description": "Lovelace card display a simple flexbox.",
  "module": "simple-flexbox-card.js",
  "engine": {
    "node": "14.x"
  },
  "scripts": {
    "build": "npm run lint && npm run rollup",
    "lint": "run-p lint-eslint lint-tsc",
    "lint-eslint": "eslint --cache --ext .js,.jsx,.ts,.tsx --format=pretty ./",
    "lint-tsc": "tsc --noEmit",
    "rollup": "rollup -c",
    "start": "rollup -c rollup.config.dev.js --watch",
    "typecheck": "tsc --noEmit",
    "typecheck--watch": "npm run typecheck -- --watch"
  },
  "keywords": [
    "home-assistant",
    "homeassistant",
    "hass",
    "hacs",
    "lovelace",
    "custom-cards"
  ],
  "repository": "https://github.com/jayknott/hass_lovelace_simple_flexbox_card.git",
  "author": "@jayknott",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "7.12.7",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.12.1",
    "@babel/plugin-proposal-numeric-separator": "^7.12.7",
    "@babel/plugin-proposal-object-rest-spread": "^7.12.1",
    "@babel/plugin-proposal-optional-chaining": "^7.12.7",
    "@rollup/plugin-json": "^4.1.0",
    "@typescript-eslint/eslint-plugin": "^4.8.1",
    "@typescript-eslint/parser": "^4.8.1",
    "eslint": "^7.14.0",
    "eslint-config-airbnb-base": "14.2.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-formatter-pretty": "^4.0.0",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^6.0.1",
    "eslint-plugin-unicorn": "^23.0.0",
    "import-sort-style-eslint": "^6.0.0",
    "lint-staged": "^10.5.1",
    "prettier": "^2.2.0",
    "rollup": "^1.32.1",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-serve": "^1.1.0",
    "rollup-plugin-terser": "^5.3.1",
    "rollup-plugin-typescript2": "^0.24.3",
    "rollup-plugin-uglify": "^6.0.4",
    "typescript": "^3.9.7"
  },
  "dependencies": {
    "custom-card-helpers": "^1.6.6",
    "lit-element": "^2.4.0",
    "lit-html": "^1.3.0"
  }
}
